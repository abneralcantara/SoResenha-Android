<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eventos.gui.CriarEventoActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="262dp"
        android:layout_height="67dp"
        android:layout_marginTop="27dp"
        android:fontFamily="cursive"
        android:text="Criar evento"
        android:textAlignment="center"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nomeFestaedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Nome do evento"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/descFestaedit"
        android:layout_width="235dp"
        android:layout_height="114dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Descricao do evento"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeFestaedit" />

    <EditText
        android:id="@+id/precoFestaedit"
        android:layout_width="183dp"
        android:layout_height="40dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="60dp"
        android:hint="PreÃ§o do ingresso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descFestaedit" />

    <Button
        android:id="@+id/criarFestabutton"
        android:layout_width="196dp"
        android:layout_height="71dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/buttonroundpurple"
        android:text="Criar Evento"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precoFestaedit" />
</android.support.constraint.ConstraintLayout>