<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eventos.gui.ConsultarEventoActivity">

    <TextView
        android:id="@+id/nomeFesta"
        android:layout_width="355dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="#3BCCBFBF"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIrfesta" />

    <TextView
        android:id="@+id/descricaoFesta"
        android:layout_width="350dp"
        android:layout_height="149dp"
        android:layout_marginTop="16dp"
        android:background="#22D5D4D4"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeFesta" />

    <TextView
        android:id="@+id/precoFesta"
        android:layout_width="128dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:paddingRight="2dp"
        android:text="preço"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descricaoFesta" />

    <TextView
        android:id="@+id/dataFesta"
        android:layout_width="182dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:paddingRight="2dp"
        android:text="data"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/precoFesta"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descricaoFesta" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/participantesFesta"
        android:layout_width="345dp"
        android:layout_height="113dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="117dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:text="Participantes"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataFesta" />

    <Button
        android:id="@+id/btnDarlike"
        android:layout_width="113dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="#1B521D"
        android:text="Like"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precoFesta" />

    <TextView
        android:id="@+id/qntLikes"
        android:layout_width="95dp"
        android:layout_height="24dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="16dp"
        android:text="likes"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataFesta" />

    <Button
        android:id="@+id/btnIrfesta"
        android:layout_width="228dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="92dp"
        android:background="#742E00"
        android:text="Confirmar Presença"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>