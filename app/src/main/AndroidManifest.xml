<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ufrpe.bsi.soresenha">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".eventos.gui.SalvarEventoActivity" />
        <activity
            android:name=".eventos.gui.ListaEventoActivity"
            android:launchMode="singleTop" />
        <activity android:name=".eventos.gui.ConsultarEventoActivity" />
        <activity android:name=".infra.gui.ConfigurationActivity" />
        <activity android:name=".infra.gui.MenuActivity" />
        <activity android:name=".usuario.gui.RegisterActivity" />
        <activity android:name=".usuario.gui.LoginActivity" />
        <activity android:name=".infra.gui.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>